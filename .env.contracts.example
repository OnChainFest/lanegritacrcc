# Smart Contract Deployment Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit the .env file to git!

# =============================================================================
# PRIVATE KEY (CRITICAL - KEEP SECRET!)
# =============================================================================
# Your wallet private key for deploying contracts
# Get this from your wallet (MetaMask, Coinbase Wallet, etc.)
# IMPORTANT: This wallet needs to have funds to pay for gas fees
PRIVATE_KEY=your_private_key_here

# =============================================================================
# NETWORK RPC URLs
# =============================================================================
# Base Mainnet (Production)
BASE_RPC_URL=https://mainnet.base.org

# Base Sepolia Testnet (Testing)
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org

# XRPL EVM Sidechain
XRPL_EVM_RPC_URL=https://rpc-evm-sidechain.xrpl.org

# =============================================================================
# BLOCK EXPLORER API KEYS
# =============================================================================
# Get your API key from https://basescan.org/myapikey
# This is used for contract verification
BASESCAN_API_KEY=your_basescan_api_key_here

# =============================================================================
# NFT TROPHY CONTRACT ADDRESSES (After Deployment)
# =============================================================================
# Update these after deploying the contracts
NFT_TROPHY_CONTRACT_ADDRESS_BASE_SEPOLIA=
NFT_TROPHY_CONTRACT_ADDRESS_BASE=
NFT_TROPHY_CONTRACT_ADDRESS_XRPL_EVM=

# =============================================================================
# TESTING / MINTING CONFIGURATION
# =============================================================================
# For testing the mint scripts
RECIPIENT_ADDRESS=0x...
TOURNAMENT_ID=tournament-123
TOURNAMENT_NAME=PadelFlow Championship 2025
PLACE=1
WINNER_NAME=Test Winner
METADATA_URI=ipfs://QmExample...

# =============================================================================
# IPFS / PINATA CONFIGURATION (Required for NFT minting with metadata)
# =============================================================================
# Get your Pinata API credentials from https://app.pinata.cloud/developers/api-keys
# Choose ONE of the following authentication methods:

# Option 1: API Key + Secret (Legacy method)
PINATA_API_KEY=your_pinata_api_key_here
PINATA_API_SECRET=your_pinata_api_secret_here

# Option 2: JWT Token (Recommended - new method)
PINATA_JWT=your_pinata_jwt_token_here

# Pinata Gateway (for viewing IPFS content via HTTP)
PINATA_GATEWAY_URL=https://gateway.pinata.cloud/ipfs/

# =============================================================================
# TOURNAMENT & WINNER CONFIGURATION (For IPFS minting)
# =============================================================================
# Tournament details
TOURNAMENT_DATE=2025-12-03T00:00:00Z
TOURNAMENT_LOCATION=Miami, FL
TOURNAMENT_FORMAT=americano
TOTAL_PLAYERS=32
PRIZE_POOL=5000 USDC

# Winner details
PARTNER_NAME=
FINAL_SCORE=

# Trophy image (optional - leave empty to use default placeholder)
TROPHY_IMAGE=

# =============================================================================
# WALLET CONNECT CONFIGURATION (Optional - for WalletConnect support)
# =============================================================================
# Get your project ID from https://cloud.walletconnect.com
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id_here
